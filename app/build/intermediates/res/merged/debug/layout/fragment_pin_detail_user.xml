<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.bsts.semut.PinDetailUserFragment"
    android:background="@color/primary"
    android:clickable="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/primaryDark"
        android:layout_marginBottom="10dp"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="@color/primary"
            android:layout_height="match_parent"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/nameText"
                android:autoText="false"
                android:textSize="18dp"
                android:textColor="#fff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Level"
                android:id="@+id/levelText"
                android:autoText="false"
                android:textSize="14dp"
                android:textColor="#fff" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Reputation"
                        android:id="@+id/textView7"
                        android:autoText="false"
                        android:textSize="14dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Point"
                        android:textColor="#fff"
                        android:id="@+id/textView9"
                        android:autoText="false"
                        android:textSize="14dp"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="100"
                        android:id="@+id/pointText"
                        android:autoText="false"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:background="@drawable/general_rounded_maincolor"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textAlignment="center"
                        android:paddingBottom="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:text="Add Friend"
        android:id="@+id/addButton"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/solid_rounded_blue"
        android:textColor="@color/white" />

</LinearLayout>
