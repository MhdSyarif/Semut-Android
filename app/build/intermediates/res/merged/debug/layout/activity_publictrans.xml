<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="project.bsts.semut.PublictransActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/primary">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backButton"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@drawable/bg_close"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Public Transportation"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnTaxi"
            android:background="@drawable/btn_taxi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAXI"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textSize="28dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnAngkot"
            android:background="@drawable/btn_angkot"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANGKOT"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textSize="28dp"/>

    </LinearLayout>

</RelativeLayout>
