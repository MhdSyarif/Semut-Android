<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.bsts.semut.MapFilterActivity"
    android:id="@+id/mainView"
    android:paddingBottom="40dp"
    android:gravity="right"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:layout_margin="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Map Item Filter"
            android:id="@+id/textView10"
            android:background="@drawable/filter_header"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:textSize="14dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/primary" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDark"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CCTV"
                android:id="@+id/checkCCTV"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_cctv"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Commuter Train"
                android:id="@+id/checkCommuterTrain"
                android:textSize="16dp"
                android:checked="true"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_station"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Angkot"
                android:id="@+id/checkAngkot"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_angkot"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Police"
                android:id="@+id/checkPolice"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_police"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Accident"
                android:id="@+id/checkAccident"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_accident"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Traffic"
                android:id="@+id/checkTraffic"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_traffic"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/checkOther"
                android:checked="true"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/filter_other"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:id="@+id/checkUsers"
                android:checked="true"
                android:textSize="16dp"
                android:button="@drawable/filter_user"
                android:textColor="@color/white"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:background="@color/primary"
                android:layout_marginBottom="0.5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
