<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.bsts.semut.TaxiOrderActivity"
    android:gravity="center_vertical|top"
    android:weightSum="1"
    android:background="#ff39a7bf">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/main_color"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/btn_back"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Order Detail"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/maptaxi"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_weight="0.42"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff38a6bf"
        android:orientation="horizontal"
        android:id="@+id/taxi_profile"
        android:weightSum="1"
        android:layout_weight="0.04"
        android:padding="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/taxi_photo"
            android:background="#fffce417"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/taxi_photo"
            android:layout_toEndOf="@+id/taxi_photo">

            <TextView
                android:id="@+id/taxi_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Driver Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D 1111 A"
                android:id="@+id/taxi_nopol"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxi Company"
                android:id="@+id/taxi_company"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="088877776666"
                android:id="@+id/taxi_phone"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/rate_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="Rate Driver"
                android:layout_margin="5dp"
                android:background="@drawable/general_rounded_orange"
                android:padding="5dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Taxi"
                android:id="@+id/rate_car"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:background="@drawable/general_rounded_orange"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/rated_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="Driver Rated"
                android:layout_margin="5dp"
                android:background="@drawable/general_rounded_maincolor"
                android:padding="5dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxi Rated"
                android:id="@+id/rated_car"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:background="@drawable/general_rounded_maincolor"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingvalue"
                android:visibility="gone"/>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/esimation"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/main_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Distance: "
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance_time"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Estimation: "
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 30.000,-"
                android:id="@+id/cost_estimate"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/general_rounded_maincolor"
                android:padding="3dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
