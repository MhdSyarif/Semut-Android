<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="project.bsts.semut.PublictransActivity"
                android:background="@drawable/bg_taxi_order"
                android:focusableInTouchMode="true"
                android:touchscreenBlocksFocus="false"
                android:keepScreenOn="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnBack"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/btn_back"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Taxi"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_taxi_his"
            android:src="@drawable/btn_history"
            android:background="#00ffffff"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER TAXI"
            android:id="@+id/ordertaxi"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCHING..."
            android:id="@+id/searchtaxi"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:text="Order taxi easily by tapping order button. And we'll do the rest for you."
            android:id="@+id/taxi_intro"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_marginBottom="25dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnOrdertaxi"
            android:textSize="28dp"
            android:text="ORDER NOW"
            android:background="@drawable/background_btn"
            android:longClickable="false"/>
        <com.github.glomadrian.dashedcircularprogress.DashedCircularProgress
            android:id="@+id/cekprogress"
            custom:external_color="@color/bg_main"
            custom:base_color="@color/menu_color"
            custom:min="0"
            custom:max="599"
            custom:progress_color="@color/progress_color"
            custom:progress_icon="@drawable/semut_logo_light"
            custom:duration="59999"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="315dp"
            android:visibility="gone"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/btncancelOrdertaxi"
                android:textSize="28dp"
                android:text="CANCEL"
                android:background="@drawable/background_btn"
                android:longClickable="false"/>

        </com.github.glomadrian.dashedcircularprogress.DashedCircularProgress>

    </LinearLayout>

</RelativeLayout>
