<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_semut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.bsts.semut.SemutActivity"
    tools:showIn="@layout/activity_semut">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="project.bsts.semut.SemutActivity" />

    <include layout="@layout/foreground_loading" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/filter_layout"
        android:visibility="gone"
        />
    <RelativeLayout
        android:background="@color/foregroundLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/markerdetail_layout"
        android:clickable="true"
        android:visibility="gone"
        />
</RelativeLayout>
